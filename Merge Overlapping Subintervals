#include <iostream>
#include<bits/stdc++.h> 
using namespace std;

class interval{
  public:
  int s,e;
};

bool mycomp(interval a, interval b)  
{ return a.s < b.s; }

void merge(interval a[],int n)
{
    sort(a,a+n,mycomp);
    int res=0;
    for(int i=1;i<n;i++)
    {
        if(a[res].e >= a[i].s)
        {
            a[res].e=max(a[res].e,a[i].e);
            a[res].s=min(a[res].s,a[i].s);
        }
        else
        {
            res++;
            a[res]=a[i];
        }
    }
    for(int i=0;i<=res;i++)
    {
        cout<<'['<<a[i].s <<"  "<<a[i].e<<"]";
    }
}
int main()
{
   interval arr[] =  { {5,10}, {3,15}, {18,30}, {2,7} }; 
    int n = sizeof(arr)/sizeof(arr[0]); 
    merge(arr, n); 

    return 0;
}
