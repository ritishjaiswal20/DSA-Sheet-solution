#include <iostream>
#include<bits/stdc++.h>
#include<map>
using namespace std;

int main()
{    
    vector<int> a;
    a={1, 3, -5, 6, -2};
    int n=5;
    map<int,int>lenMap;
    int sum=0;
    int i=-1;
    lenMap.insert({{-1,0}});
    int mlen=0;
    while(i<5-1)
    {
        i++;
        sum+=a[i];
        if(lenMap.contains(sum)==true)
        {
            int len=i-lenMap.find(sum);
            if(len>mlen)
            {
                mlen=len;
            }
        }
        else
        {
                 lenMap.insert({{i,sum}});
        }
    }
    cout<<mlen;
    return 0;
}
